# Production Environment Variables for Hostinger Deployment
# Copy this file to .env.local and update with your production values

# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# A/B Testing Configuration
AB_TESTING_ENABLED=true
AB_TESTING_AUTO_ANALYZE=true
AB_TESTING_AUTO_ANALYZE_INTERVAL=3600000
AB_TESTING_MIN_SAMPLE_SIZE=100
AB_TESTING_DEFAULT_CONFIDENCE_LEVEL=95

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=365
VISITOR_SESSION_TIMEOUT=1800000

# Performance Configuration
CACHE_TTL=300
MAX_CONCURRENT_TESTS=10
RATE_LIMIT_PER_MINUTE=1000

# Security Configuration
ADMIN_JWT_SECRET="your-super-secure-jwt-secret-here"
ADMIN_SESSION_TIMEOUT=86400000
CORS_ORIGIN="https://yourdomain.com"

# External Services
GEOLOCATION_API_KEY=""
EMAIL_SERVICE_API_KEY=""
WEBHOOK_SECRET=""

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="info"

# Feature Flags
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_AUTO_OPTIMIZATION=true
ENABLE_VISITOR_PROFILES=true
ENABLE_CAMPAIGN_MANAGEMENT=true