# =================================
# PRODUCTION ENVIRONMENT VARIABLES
# =================================
# Copy this file to .env.production.local and fill in your production values
# NEVER commit the actual .env.production.local file to version control

# =================================
# APPLICATION CONFIG
# =================================
NODE_ENV=production
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-at-least-32-characters

# =================================
# DATABASE CONFIG
# =================================
# Production Database (PostgreSQL recommended for production)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# Database connection pool settings
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# =================================
# EXTERNAL SERVICES
# =================================
# Google Services
GOOGLE_SOLAR_API_KEY=your-google-solar-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Email Service (choose one)
# Sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Or Resend
RESEND_API_KEY=your-resend-api-key

# Or SMTP
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# =================================
# AI SERVICES
# =================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# =================================
# STORAGE & CDN
# =================================
# AWS S3 (for file uploads)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name

# Or Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# CDN Configuration
CDN_URL=https://cdn.yourdomain.com

# =================================
# MONITORING & ANALYTICS
# =================================
# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project

# LogRocket or similar
LOGROCKET_APP_ID=your-logrocket-app-id

# Hotjar
HOTJAR_ID=your-hotjar-id

# =================================
# PAYMENT PROCESSING
# =================================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =================================
# SECURITY
# =================================
# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Content Security Policy
CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# =================================
# FEATURE FLAGS
# =================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_AB_TESTING=true
ENABLE_MAINTENANCE_MODE=false

# =================================
# CACHE CONFIGURATION
# =================================
# Redis (recommended for production)
REDIS_URL=redis://username:password@redis-host:port
REDIS_TLS=true

# Cache TTL settings (in seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# =================================
# WEBHOOK ENDPOINTS
# =================================
WEBHOOK_SECRET=your-webhook-secret-key
SLACK_WEBHOOK_URL=your-slack-webhook-url
ZAPIER_WEBHOOK_URL=your-zapier-webhook-url

# =================================
# BACKUP & RECOVERY
# =================================
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_S3_BUCKET=your-backup-s3-bucket

# =================================
# SOCIAL MEDIA & MARKETING
# =================================
FACEBOOK_PIXEL_ID=your-facebook-pixel-id
LINKEDIN_INSIGHT_TAG=your-linkedin-insight-tag
TWITTER_API_KEY=your-twitter-api-key

# =================================
# CONTACT & SUPPORT
# =================================
SUPPORT_EMAIL=support@yourdomain.com
SALES_EMAIL=sales@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# =================================
# LEGAL & COMPLIANCE
# =================================
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms
GDPR_COMPLIANCE_MODE=true

# =================================
# PERFORMANCE MONITORING
# =================================
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
DATADOG_API_KEY=your-datadog-api-key