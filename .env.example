# Local Power - Environment Variables Template
# Copy this to .env.local for development or configure in Vercel for production

# Database Configuration
DATABASE_URL="file:./prisma/dev.db"
POSTGRES_URL=""
POSTGRES_PRISMA_URL=""
POSTGRES_URL_NO_SSL=""
POSTGRES_URL_NON_POOLING=""

# Application
NODE_ENV="development"
NEXTAUTH_URL="http://localhost:3002"
NEXTAUTH_SECRET="your-nextauth-secret-here"
JWT_SECRET="your-jwt-secret-here"

# Solar Calculator Defaults
DEFAULT_SYSTEM_SIZE=6.5
DEFAULT_PRICE_PER_WATT=2.50
SEAI_GRANT_AMOUNT=1800

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_DEBUG_LOGGING=true

# Optional Integrations
GOOGLE_MAPS_API_KEY=""
SENDGRID_API_KEY=""
GOOGLE_ANALYTICS_ID=""